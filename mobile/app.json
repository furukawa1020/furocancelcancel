{
  "expo": {
    "name": "Intentless Bath",
    "slug": "intentless-bath",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#050511"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.intentless.bath",
      "infoPlist": {
        "NFCReaderUsageDescription": "To detect the bath towel tag.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#050511"
      },
      "package": "com.intentless.bath",
      "permissions": ["android.permission.NFC", "android.permission.WAKE_LOCK"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
        "react-native-nfc-manager",
        "expo-av"
    ]
  }
}
